@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/login.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="login-box p-4">
            <h3 class="text-center mb-4">@ViewData["Title"]</h3>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="input-container mb-3">
                    <i class="fas fa-user icon"></i>
                    <input asp-for="Input.Email" class="form-control input-field" autocomplete="username" placeholder="name@example.com" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="input-container mb-3">
                    <i class="fas fa-lock icon"></i>
                    <input asp-for="Input.Password" class="form-control input-field" autocomplete="current-password" placeholder="Password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

               
                <div class="d-grid mb-3">
                    <button id="login-submit" type="submit" class="btn btn-gradient w-100">Log in</button>
                </div>

          @*       <div class="text-center mt-3">
                
                    <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="signup-link">Register as a new user</a></p>
                </div> *@
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>











