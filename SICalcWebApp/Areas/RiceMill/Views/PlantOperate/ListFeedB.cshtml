@model IEnumerable<SICalcWebApp.Areas.RiceMill.Models.FeedingBunker>

@{
    ViewData["Title"] = "List of Feeding Bunkers";
}

<h1 class="mb-4 text-center">List of Feeding Bunkers</h1>

<div class="d-flex justify-content-between align-items-center mb-3">

    <a asp-action="AddFeedBunker" class="btn btn-primary">
        <i class="fas fa-plus"></i> Create New
    </a>
</div>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th style="width: 70%;">@Html.DisplayNameFor(model => model.FeedingBName)</th>
            <th style="width: 30%;" class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="2" class="text-center text-muted">No records found.</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.FeedingBName)</td>
                    <td class="text-center">
                        <a asp-action="EditFeedBunker" asp-route-id="@item.Id" class="btn btn-sm btn-secondary me-2">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <form asp-action="Delete" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
