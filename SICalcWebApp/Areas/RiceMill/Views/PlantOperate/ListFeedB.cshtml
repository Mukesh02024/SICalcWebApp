@model IEnumerable<SICalcWebApp.Areas.RiceMill.Models.FeedingBunker>

@{
    ViewData["Title"] = "ListFeedB";
}

<h1>ListFeedB</h1>

<p>
    <a asp-action="AddFeedBunker">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FeedingBName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FeedingBName)
            </td>
            <td>
                    <a asp-action="EditFeedBunker" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a> |

                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">
                            Delete
                        </button>
                    </form>
            </td>
        </tr>
}
    </tbody>
</table>
